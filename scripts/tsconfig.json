{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": false,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
    ],
  },
  "include": [
    "./src/**/*.ts",
  ],
}