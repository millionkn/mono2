{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": false,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "types": [],
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ]
}